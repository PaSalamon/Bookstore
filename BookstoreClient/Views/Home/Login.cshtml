@{
    Layout = null;
}

@model BookstoreClient.Models.UserModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookstoreClient.styles.css" asp-append-version="true" />
    <title>Login Screen</title>
</head>
<body class="container">
    <div class="pb-3">




@{
    ViewData["Title"] = "Login Screen";
}

<h1>Login Screen</h1>


<hr />
<div class="row ">
    <div class="col-md-4">
        <form asp-action="LoginButton">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Login
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <p></p>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
            <form asp-action="Register">
                <p></p>
                <input type="submit" name="Register" value="Register" class="btn btn-danger" />
            </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
    </div>
</body>
</html>